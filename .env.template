# Local development env vars (DO NOT COMMIT .env with real tokens)

# -----------------------------------------------------------------------------
# Firebase deploy auth
# -----------------------------------------------------------------------------
# Firebase CLI non-interactive auth token.
# Generate on host with: firebase login:ci
FIREBASE_TOKEN=

# Optional default Firebase project. If omitted, requests can pass firebaseProjectId.
FIREBASE_PROJECT=sitegen-96189

# -----------------------------------------------------------------------------
# Skeleton resolution
# -----------------------------------------------------------------------------
# Option 1 (local dev): set a path to a local skeleton checkout.
# If empty, pipeline will fall back to /workspace (docker mount) or /app/skeleton.
SITEGEN_SKELETON_DIR=

# Option 2 (recommended for Cloud Run): clone skeleton at runtime.
SITEGEN_SKELETON_GIT_URL=
SITEGEN_SKELETON_REF=main

# If skeleton repo is private, set a GitHub token (fine-grained, read-only).
GITHUB_TOKEN=

# -----------------------------------------------------------------------------
# Vertex / ADK plan generation (only used if request omits pagePlanJson)
# -----------------------------------------------------------------------------
GOOGLE_CLOUD_PROJECT=sitegen-96189
VERTEX_LOCATION=us-central1
VERTEX_MODEL=gemini-2.0-flash

# Optional: override ADK generator location in the container
SITEGEN_ADK_DIR=
