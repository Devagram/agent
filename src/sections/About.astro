---
import type { Section } from '../lib/schema';

type Props = Extract<Section, { type: 'about' }>;

const { variant, props } = Astro.props as Props;
const { headline, content, image } = props;
---

<section class={`about about--${variant}`}>
  <div class="wrap">
    <div class="about__inner">
      <div class="about__content">
        <h2>{headline}</h2>
        <p>{content}</p>
      </div>
      {image ? (
        <div class="about__media">
          <img class="about__image" src={image} alt="" loading="lazy" />
        </div>
      ) : null}
    </div>
  </div>
</section>

<style>
  @import '../styles/tokens.css';

  .wrap {
    width: min(1100px, 92vw);
    margin: 0 auto;
    padding: var(--space-12) 0;
  }

  .about__inner {
    display: grid;
    gap: var(--space-8);
    align-items: center;
    grid-template-columns: 1.2fr 0.8fr;
  }

  .about--centered .about__inner {
    grid-template-columns: 1fr;
    text-align: center;
  }

  @media (max-width: 900px) {
    .about__inner {
      grid-template-columns: 1fr;
    }
  }

  .about h2 {
    font-size: 1.75rem;
    letter-spacing: -0.01em;
  }

  .about p {
    margin-top: var(--space-4);
    opacity: 0.9;
  }

  .about__image {
    width: 100%;
    height: auto;
    border-radius: var(--radius-lg);
    border: 1px solid color-mix(in oklab, var(--color-primary), black 12%);
  }
</style>
